/**
 * Create a modal to display an error
 */
var errorModal = {
  closeErrorModal: function () {
    ddm.modal($('.error-modal')).close();
  },

  openErrorModal: function (title, message) {
    if (title) {
      $('.error-modal h1.ddm-modal__title').text(title);
    }
    if (message) {
      $('.error-modal .ddm-modal__body p').html(message);
    }
    ddm.modal($('.error-modal')).open();
  }
}
